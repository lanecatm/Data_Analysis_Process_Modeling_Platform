<% if @node %>
    <h3> <%= node_tag(@node) %> </h3>
    <h3>
        <small>
            <%= simple_format @node.description %>
            <a class="btn-opt" href="<%= homeland.edit_node_path(@node) %>">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
            </a>
            <a class="btn-opt" href="<%= homeland.node_path(@node) %>" data-method="DELETE" data-confirm="<%= t('homeland.are_you_sure_to_delete') %>">
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
            </a>
        </small>
    </h3>
    <hr/>
    <% if admin? %>
    <% end %>
<% end %>
