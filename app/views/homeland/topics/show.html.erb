<div class="container">
    <div class = "row">
        <div class="col-md-offset-3 col-md-6">
            <h3>
                <%= @topic.title %>
                <%= node_tag(@topic.node) %>
            </h3>
            <hr/>

            <table class="table table-striped table-bordered" >
                <tr>
                    <td>
                        <%= render partial: 'homeland/replies/reply', locals: { reply: @topic } %>
                    </td>
                </tr>
                <% @replies.each do |reply|%>
                <tr>
                    <td>
                        <%= render reply %>
                    </td>
                </tr>
                <% end %>
            </table>


            <%= render 'reply_form' %>
        </div>
    </div>
</div>
