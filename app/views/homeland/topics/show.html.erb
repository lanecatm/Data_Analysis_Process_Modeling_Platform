<div class="container">
    <div class = "row">
        <div class="col-md-offset-3 col-md-6">
            <div>
                    <h3>Topic
                    <span class="pull-right">
                    <%= link_to( wt( 'All Topic' ), main_app.wiki_page_path(@topic.node.wiki_page.path, :active_page=>"forum"), class:"btn btn-default btn-sm", role:"button") %>
                </span>
                </h3>
            </div>
            <hr/>
            <div class="panel panel-default">
                <div class="panel-heading">
                    Topic: <%= @topic.title %> 
                </div>
                <table class="table table-striped table-bordered" >
                    <tr>
                        <td>
                            <%= render partial: 'homeland/replies/reply', locals: { reply: @topic } %>
                        </td>
                    </tr>
                    <% @replies.each do |reply|%>
                        <tr>
                            <td>
                                <%= render reply %>
                            </td>
                        </tr>
                    <% end %>
                </table>
            </div>
            <%= render 'reply_form' %>
        </div>
    </div>
</div>
