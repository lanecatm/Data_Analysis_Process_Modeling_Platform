<%
    is_reply = reply.respond_to?(:reply_to_id)
%>
<div class="media" id="reply-<%= reply.id %>" data-id="<%= reply.id %>">
    <div class="media-left">
        <a href="#">
            <% if reply.user.user_picture != nil %>
            <img src="/assets/<%= reply.user.user_picture.name %>" alt="" style="width: 40px; height: 40px;">
            <% else %>
            <img src="/assets/user.png" alt="" style="width: 40px; height: 40px;">
            <% end %>
        </a>
        <!--
        <%= user_avatar_tag(reply) %>
        -->
    </div>
    <div class="media-body">
        <!--
        <h4 class="media-heading">
            -->
            <%= raw reply.body_html %>
            <!--
        </h4>
        -->
        <h4>
            <small>
                <%= user_name_tag(reply) %>
                <span class=""> <%= timeago reply.created_at %></span>
                <% if owner?(reply) %>
                    <a href="<%= is_reply ? edit_reply_path(reply) : edit_topic_path(reply) %>" class="">
                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        <%= "Edit" %>
                    </a>
                    <a href="<%= is_reply ? reply_path(reply) : topic_path(reply) %>" data-method="DELETE" data-confirm="<%= t('homeland.are_you_sure_to_delete') %>" class="">
                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        <%= "Delete" %>
                    </a>
                <% end %>

                <% if is_reply && reply.reply_to_id %>
                    <a href="#reply-<%= reply.reply_to_id %>" title="<%= t('homeland.topics.reply_to') %>" class="">
                        <span class="glyphicon glyphicon-link" aria-hidden="true"></span>
                    </a>
                <% end %>

                <span class="pull-right">
                    <a href="<%= homeland.topic_path(@topic, anchor: "reply-#{reply.id}") %>" class="">
                        <span class="glyphicon glyphicon-link" aria-hidden="true"></span>
                        <%= "Reply" %>
                    </a>
                    <a href="#" class="" data-action="reply" data-reply-id="<%= is_reply ? reply.id : ''  %>">
                        <span class="glyphicon glyphicon-arrow-up" aria-hidden="true"></span>
                        <%= "Back to Topic" %>
                    </a>
                </span>

            </small>
        </h4>
    </div>
</div>
