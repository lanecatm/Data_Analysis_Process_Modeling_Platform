<%
    is_reply = reply.respond_to?(:reply_to_id)
%>
<div class="media" id="reply-<%= reply.id %>" data-id="<%= reply.id %>">
    <div class="media-left">
        <a href="#">
            <img src="/assets/user.png" alt="" style="width: 40px; height: 40px;">
        </a>
        <!--
        <%= user_avatar_tag(reply) %>
        -->
    </div>
    <div class="media-body">
        <h4 class="media-heading">
            <%= raw reply.body_html %>
        </h4>
        <h4>
            <small>
            <%= user_name_tag(reply) %>
            <span class=""> <%= timeago reply.created_at %></span>
            <% if owner?(reply) %>
                <a href="<%= is_reply ? edit_reply_path(reply) : edit_topic_path(reply) %>" class=""><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
                <a href="<%= is_reply ? reply_path(reply) : topic_path(reply) %>" data-method="DELETE" data-confirm="<%= t('homeland.are_you_sure_to_delete') %>" class="">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                </a>
            <% end %>

            <!--
            <% if is_reply && reply.reply_to_id %>
                <a href="#reply-<%= reply.reply_to_id %>" title="<%= t('homeland.topics.reply_to') %>" class="">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                </a>
            <% end %>

            <span class="pull-xs-right">
                <a href="<%= homeland.topic_path(@topic, anchor: "reply-#{reply.id}") %>" class="btn"><i class="fa fa-link"></i></a>
                <a href="#" class="btn" data-action="reply" data-reply-id="<%= is_reply ? reply.id : ''  %>"><i class="fa fa-reply"></i> <%= t('homeland.reply') %></a>
            </span>
            -->
            </small>
        </h4>
    </div>
</div>
