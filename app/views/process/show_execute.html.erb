<!-- 页面标题 -->

<br/>
<br/>
<!-- 表单 -->
<div class="container">
    <div class = "row">
        <div class="col-md-offset-2 col-md-8">
            <div class = "row">
                <div class="col-md-12">
                    <div class = "row">
                        <h3 >
                            <%= @workflow_information.name %>
                            <small><%= @workflow_information.version_name %></small>
                        </h3>

                        <h4>
                            <small><%= @workflow_information.introduction %></small> 
                        </h4>
                        <hr/>
                    </div>
                </div>
                <form class="form-horizontal" role="form">
                    <!-- 抄的运行 -->
                    <div class="form-group">
                        <div class="col-md-12"><h4>Step 1: Input data</h4></div>
                        <label class="col-md-12">Input data from local file</label>
                        <div class="col-md-4">
                            <input type="file" id="caseInputFile">
                        </div>
                    </div>
                    <hr/>

                    <div class="form-group">
                        <div class="col-md-8">
                            <h4>Step 2: Adjust parameters</h4>
                        </div>
                        <label class="col-md-12">Choose parameters</label>

                        <div class="col-md-4">
                            <select class="form-control">
                                <option> </option>
                                <option>Algorithm A result 1</option>
                                <option>Algorithm B result 2</option>
                            </select>
                        </div>
                        <br/>
                    </div>
                    <div class="form-group">
                        <label class="col-md-12">Parameter 1</label>
                        <div class="col-md-4">
                            <input type="text" class="form-control">
                        </div>
                        <label class="col-md-12">Parameter 2</label>
                        <div class="col-md-4">
                            <input type="text" class="form-control">
                        </div>
                    </div>
                    <br/>
                    <div class="form-group">
                        <div class="col-md-2">
                            <button class="btn btn-primary btn-block">Run</button>
                        </div>
                    </div>
                    <hr/>
                    <div class="form-group">
                        <div class="col-md-12">
                            <h4>Step 3: Progress rate </h4>
                        </div>
                        <div class="col-md-12">
                            <div class="progress">
                                <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 60%;">
                                    60%
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <label> Now running Algorithm A</label>
                        </div>
                    </div>
                    <hr/>

                    <div class="form-group">
                        <div class="col-md-12"><h4>Step 4: Output data</h4></div>

                    <!-- 结束抄的运行 -->
                        <label class="col-md-12">Output filename</label>
                        <div class="col-md-4">
                            <input type="text" class="form-control" placeholder="Algorithm A output i">
                        </div>
                        <!--
                        <div class="col-md-2">
                            <button class="btn btn-default btn-block">Save in server</button>
                        </div>
                        -->
                        <div class="col-md-2">
                            <button class="btn btn-default btn-block">Download</button>
                        </div>
                    </div>
                    <hr/>
                    <div class="form-group">
                        <div class="col-md-12">
                            <h4>Step 5: Save as use case</h4>
                        </div>
                        <label class="col-md-12">Use case name</label>
                        <div class="col-md-4">
                            <input type="text" class="form-control" placeholder="Algorithm A parameters i">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-12">Use case description</label>
                        <div class="col-md-8">
                            <textarea class="form-control" row="5" placeholder="Algorithm A parameters i"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-3">
                            <button class="btn btn-primary btn-block">Save use case</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
