
<script type="text/javascript">
    $(function () {
            $(".radio").click(function () {
                if ($("#use_sample_input").is(":checked")) {
                $("#use_sample_input_form").css("display", "none");
                $("#upload_form").css("display", "block");
                }
                else {
                $("#use_sample_input_form").css("display", "block");
                $("#upload_form").css("display", "none");
                }
                });
            });
</script>

<% if params.has_key?"process_id" and @process_information.shared_process_privilege!= nil and @process_information.shared_process_privilege.is_shared_sample_input %>
    <form class="form-horizontal">
        <div class="form-group">
            <label class="col-md-12">Input file choices</label>
            <div class="col-md-12">
                <div class="radio">
                    <label>
                        <input type="radio" name="use_sample_input" value="true" id="use_sample_input" checked/> 
                        I want to use sample input file.
                    </label>

                </div>
            </div>
            <div class="col-md-12">
                <div class="radio">
                    <label>
                        <input type="radio" name="use_sample_input" value="false" /> 
                        I want to upload input file.
                    </label>
                </div>
            </div>
        </div>
    </form>


    <div id = "upload_form" style = "display:block">
        <%= form_for :upload, :html => {:class => "form-horizontal", :role => "form"}, url: process_upload_path do |f|%>
            <div class="form-group">
                <label class="col-md-12">
                    Sample file: <%= @upload_file_name %>
                    <%=  %>
                </label>
                <div class="col-md-3">
                    <%= f.hidden_field :process_id, :value => params[:process_id] %>
                    <%= f.submit :"Download", :class => "btn btn-primary btn-block" %>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <%= f.submit :"Submit", :class => "btn btn-primary btn-block" %>
                </div>
            </div>
        <% end %>
    </div>

    <div id = "use_sample_input_form" style = "display:none">
        <%= form_for :upload, :html => {:class => "form-horizontal", :role => "form"}, url: process_upload_path do |f|%>
            <div class="form-group">
                <label class="col-md-12">input data from local file</label>
                <div class="col-md-12">
                    <%= f.hidden_field :process_id, :value => params[:process_id] %>
                    <%= f.file_field :file%>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    <%= f.submit :"Upload", :class => "btn btn-primary btn-block" %>
                </div>
            </div>
        <% end %>

    </div>


<% else %>
    <%= form_for :upload, :html => {:class => "form-horizontal", :role => "form"}, url: process_upload_path do |f|%>
        <div class="form-group">
            <label class="col-md-12">input data from local file</label>
            <div class="col-md-12">
                <%= f.hidden_field :process_id, :value => params[:process_id] %>
                <%= f.file_field :file%>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-3">
                <%= f.submit :"Upload", :class => "btn btn-primary btn-block" %>
            </div>
        </div>
    <% end %>
<% end %>

