<div class="container">
    <div class = "row">
        <div class="col-md-offset-3 col-md-6">
            <h3> Generate algorithm </h3>
            <hr/>
        </div>
    </div>
    <div class = "row">
        <div class="col-md-offset-3 col-md-6">
            <%= simple_form_for @node_function, :url => node_index_path, :method => :post do |f|%>
                <div class = "row">
                    <div class="col-md-6">
                        <%= f.association :node_category, input_html:{class: "node-category"} %>
                    </div>
                    <div class="col-md-6">
                        <%= f.input :name, as: :string %>
                    </div>
                </div>
                <%= f.input :description %>
                <hr/>
                <h3> Options</h3>
                <hr/>
                <div id='node_options'>
                    <%= f.simple_fields_for :node_options do |node_option| %>
                        <%= render '/node/node_option_fields', :f => node_option %>
                    <% end %>
                    <div class= "row">
                        <div class= "col-md-12">
                            <div class="links">
                                <label></label>
                                <%= link_to_add_association 'Add New Option', f, :node_options, :class=>"btn btn-default btn-block" %>
                            </div>
                            <hr/>
                        </div>
                        <div class= "col-md-offset-10 col-md-2">
                            <%= f.submit 'Save', :class => "btn btn-primary btn-block" %>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div> <!-- /container -->

