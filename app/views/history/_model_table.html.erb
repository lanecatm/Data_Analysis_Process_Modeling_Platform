
<br/>

<div class="row">
    <div class="col-md-3 ">
        <div class="row">
            <%= form_for :search_content, method: :patch, :html => {:class => "form-inline", :role => "form"}, url:process_execute_path do |f|%>
                <div class="input-group" >
                    <%= f.text_field :search, :class => "form-control" %>
                    <div class="input-group-btn">
                        <%= button_tag(type: 'submit', class: "btn btn-default btn-block") do %>
                            <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                        <% end %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>
<br/>
<div class="row">
    <table class="table table-striped table-bordered" >
        <tr>
            <th>ID </th>
            <th>Model name</th>
            <th>Version</th>
            <th>Update time</th>
            <th>Status</th>
        </tr>
        <% @workflow_informations.each do |workflow_information| %>
            <tr>
                <td>
                    <%= workflow_information.id %>
                </td>
                <td>
                    <%= link_to workflow_information.name, workflow_information_path(workflow_information) %>
                </td>
                <!--
                <p>
                <%= workflow_information.introduction %>
                </p>
                -->
                <td>
                    <%= workflow_information.version_name %>
                </td>
                <td>
                    <%= workflow_information.updated_at.strftime("%Y-%m-%d %H:%M:%S")  %>
                </td>
                <td>
                    <% if workflow_information.status == WorkflowInformation::WORKFLOW_INFO_INIT %>
                        <%= "Created" %>
                    <% end %>
                    <% if workflow_information.status == WorkflowInformation::WORKFLOW_INFO_EDITING %>
                        <%= "Editing" %>
                    <% end %>
                    <% if workflow_information.status == WorkflowInformation::WORKFLOW_INFO_PUBLISH %>
                        <%= "Published" %>
                    <% end %>
                </td>
            </tr>
        <% end %>
    </table>
</div>
