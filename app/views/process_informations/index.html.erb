<link href="http://www.jq22.com/jquery/bootstrap-3.3.4.css" rel="stylesheet">
<div style="background-color:#E0E0E0;">
    <br/>
    <h1 class="text-center">ISDSP</h1>
    <br/>
    <%= render '/process_informations/search_bar' %>
    <br/>
    <br/>
    <div class="container">
        <div class="col-md-offset-3 col-md-6">
            <ul class="nav nav-tabs nav-justified">
                <li role="presentation" class="active"><a href="#">All</a></li>
                <li role="presentation"><a href="#">Title</a></li>
                <li role="presentation"><a href="#">Tag</a></li>
                <li role="presentation"><a href="#">Attribute</a></li>
                <li role="presentation"><a href="#">Other</a></li>
            </ul>
        </div>
    </div>
</div>

<div class="container">
    <!-- Example row of columns -->
    <div class = "row">
        <div class="col-md-offset-3 col-md-6">
            <ul class="list-unstyled">
                <li>
                <div class = "row">
                    <div class="col-md-8">
                        <h3> We have found x results</h3>
                    </div>
                    <div class="col-md-4">
                        <br/>
                        <div class="dropdown">
                            <button id="sortBtn" class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Sort: Best match
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="sortBtn">
                                <li><a>Highest score</a></li>  
                                <li><a>Lowest score</a></li>
                                <li><a>Most user</a></li>
                                <li><a>Fewest user</a></li>
                                <li><a>Recently update</a></li>
                                <li><a>Least recently update</a></li>

                            </ul>
                        </div>
                    </div>
                </div>
                <hr/>
                </li>
                <%= @process_informations.each do |process_information| %>
                    <li>
                    <h3>
                        <%= link_to process_information.name, process_information_path(process_information) %>
                        <a>
                            &nbsp;
                            <small><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></small>
                            <small><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></small>
                        </a>

                    </h3>
                    <p>
                    <%= process_information.introduction %>
                    </p>
                    <div>
                        <p>
                        <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                        <%= process_information.author %> 
                        &nbsp;
                        <span class="glyphicon glyphicon-paperclip" aria-hidden="true"></span>
                        Category 1 
                        &nbsp;
                        <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
                        4
                        &nbsp;
                        Version <a>x.x.x</a>
                        </p>
                    </div>
                    <div>
                        <span class="label label-default">标签1</span>
                        <span class="label label-default">标签2</span>
                        <span class="label label-default">标签3</span>
                    </div>
                    </li>
                    <hr/>

                <% end %>

            </ul>

        </div>
    </div>
    <hr/>

    <div class = "row">
        <footer>
        <p>© SJTU 2017</p>
        </footer>
    </div>
</div> <!-- /container -->



