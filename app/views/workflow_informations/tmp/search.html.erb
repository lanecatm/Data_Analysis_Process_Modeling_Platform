<div class="jumbotron">
    <!-- 搜索框 -->
    <div class="container">
        <div class="col-md-offset-3 col-md-6">
            <ul class="nav nav-tabs">
                <li role="presentation" class="active"><a href="#bycategory" aria-controls="bycategory" role="tab" data-toggle="tab">标题</a></li>
                <li role="presentation"><a href="#bytag" aria-controls="bytag" role="tab" data-toggle="tab">关键字</a></li>
                <!--<li role="presentation"><a href="#bykeyword" aria-controls="bykeyword" role="tab" data-toggle="tab">关键字</a></li>-->
            </ul>
            <div class="tab-content">
                <div role="tabpanel" class="tab-pane active" id="bycategory">
                    <%= form_for :search_request, url:process_informations_search_path do |f| %>
                        <div class="input-group">
                            <%= f.text_field:search_content, :class=>"form-control", :placeholder => "搜索标题" %>
                            <span class="input-group-btn">
                                <%= f.submit:"搜索",:class => "btn btn-primary" %>
                            </span>
                        </div><!-- /input-group -->
                    <% end %>
                </div>


                <div role="tabpanel" class="tab-pane" id="bytag">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for tag ...">
                        <span class="input-group-btn">
                            <button class="btn btn-primary" type="button">搜索</button>
                        </span>
                    </div><!-- /input-group -->
                </div>

                <!--
                <div role="tabpanel" class="tab-pane" id="bykeyword">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for tag ...">
                        <span class="input-group-btn">
                            <button class="btn btn-primary" type="button">搜索</button>
                        </span>
                    </div>
                </div>
                -->
            </div>
        </div><!-- /col-md-12 -->
    </div><!-- /container -->
</div>


