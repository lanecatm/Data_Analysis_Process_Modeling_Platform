<!-- 表单 -->
<div class="container">
    <div class = "row">
        <div class="col-md-3">
        </div>

        <div class="col-md-6">
            <div class = "row">
                <!-- Nav tabs -->
                <!-- 页面标题 -->
                <h3> <!--class="text-center" -->Create a new model
                </h3>
                <h4>
                    <small> A model include basic information and workflow diagrom. </small> 
                </h4>
                <hr/>
                <%= form_for :workflow_information, :html => {:class => "form-horizontal", :role => "form"}, url:workflow_informations_path do |f|%>
                    <div class="form-group">
                        <label class="col-md-12 ">Model name</label>
                        <div class="col-md-12">
                            <%= f.text_field :name, :class => "form-control", :placeholder => "" %>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-12">Model introduction <small class="text-muted">(optional)</small></label>
                        <div class="col-md-12">
                            <%= f.text_area :introduction, :class => "form-control", :placeholder => "" %>
                        </div>
                    </div>
                    <hr/>
                     
                    <div class="form-group">
                        <div class="col-md-10"></div>
                        <div class="col-md-2">
                            <%= f.submit :"Create", :class => "btn btn-primary btn-block" %>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div> <!-- /container -->


