<script type="text/javascript">
    $(function () {
            $(".radio").click(function () {
                if ($("#save_as_new_version").is(":checked")) {
                $("#model_unique_info").css("display", "none");
                }
                else {
                $("#model_unique_info").css("display", "block");
                }
            });
        });
</script>

<% if @workflow_information.status == 1 %>
    <%= form_for :workflow_information, method: :patch, :html => {:class => "form-horizontal", :role => "form"}, url:workflow_information_path do |f|%>
        <div class="form-group">
            <label class="col-md-12 ">Version</label>
            <div class="col-md-12">
                <%= f.text_field :version_name, :class => "form-control", :placeholder => "New version" %>
            </div>
            <hr/>

        </div>
        <hr/>
        <div class="form-group">
            <!-- Button trigger modal -->
            <div class="col-md-offset-9 col-md-3">
                <%= f.submit :"Publish", :class => "btn btn-primary btn-block" %>
            </div>
        </div>

    <% end %>
<% else %>
    <%= form_for :workflow_information, method: :patch, :html => {:class => "form-horizontal", :role => "form"}, url:workflow_information_path do |f|%>

        <div class="form-group">
            <div class="col-md-12">
                <label> Version operation </label>
            </div>
            <div class="col-md-12">
                <div class="radio">
                    <label>
                        <%= radio_button_tag(:save_as, "new_version", true) %>
                        <%= label_tag(:save_as, "Create a new version based on origin.") %>
                    </label>

                </div>
            </div>
            <div class="col-md-12">
                <div class="radio">
                    <label>
                        <%= radio_button_tag(:save_as, "new_model") %>
                        <%= label_tag(:age_adult, "Save as a new model.") %>
                    </label>
                </div>
            </div>
        </div>
        <hr/>
        <div id = "model_unique_info" style="display:none">
            <div class="form-group">
                <label class="col-md-12 ">Model name</label>
                <div class="col-md-12">
                    <%= f.text_field :name, :class => "form-control", :placeholder => "New model name" %>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-12">Model introduction <small class="text-muted">(optional)</small></label>
                <div class="col-md-12">
                    <%= f.text_area :introduction, :class => "form-control", :placeholder => "New model introduction" %>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-12 ">Version</label>
            <div class="col-md-12">
                <%= f.text_field :version_name, :class => "form-control", :placeholder => "New version" %>
            </div>
            <hr/>

        </div>
        <hr/>
        <div class="form-group">
            <div class="col-md-offset-9 col-md-3">
                <%= f.submit :"Publish", :class => "btn btn-primary btn-block" %>
            </div>
        </div>
    <% end %>
<% end %>
