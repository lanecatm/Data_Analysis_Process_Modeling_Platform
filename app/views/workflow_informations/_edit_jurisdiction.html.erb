
<%= form_for(@workflow_information, :html => {:class => "form-horizontal", :role => "form"}) do |form|%>

    <!--
    <div class="form-group">
        <label class="col-md-12">Show User Group</label>
        <div class="col-md-7">
        </div>
    </div>
    -->
    <%= form.fields_for :workflow_privilege do |f| %> 
        <div class="form-group">
            <label class="col-md-12">Execution User Group</label>
            <div class="col-md-7">
                <%=f.select :execute_department_id, @departments, 
                    {
                    :selected => @workflow_information.workflow_privilege.execute_department.id}, 
                    { class: "form-control" } 
                %> 
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-12">Edit User Group</label>
            <div class="col-md-7">
                <%=f.select :edit_department_id, @departments, 
                    {
                    :selected => @workflow_information.workflow_privilege.edit_department.id}, 
                    { class: "form-control" } 
                %> 
            </div>
        </div>
        <div class="form-group">
            <label class="col-md-12">Delete User Group</label>
            <div class="col-md-7">
                <%=f.select :delete_department_id, @departments,
                    {
                    :selected => @workflow_information.workflow_privilege.delete_department.id}, 
                    { class: "form-control" } 
                %>
            </div>
        </div>
    <% end %>
    <hr/>
    <div class="form-group">
        <!-- Button trigger modal -->
        <div class="col-md-2">
            <%= form.submit :"Last", :class => "btn btn-primary btn-block" %>
        </div>
        <div class="col-md-offset-5 col-md-3">
            <%= form.submit :"Save Privilege", :class => "btn btn-primary btn-block" %>
        </div>
        <div class="col-md-2">
            <%= form.submit :"Next", :class => "btn btn-primary btn-block" %>
        </div>
    </div>

<% end %>
