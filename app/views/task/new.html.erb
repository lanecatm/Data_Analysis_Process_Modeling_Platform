<div class="container">
    <div class = "row">
        <div class="col-md-offset-3 col-md-6">
            <h3><%=wt 'Creating a new task' %></h3>
            <hr/>
            <%= form_for :task, :html => {:class => "form-horizontal", :role => "form"}, url:task_index_path do |f|%>
                <%= render 'task/new_wiki_fields', :f=>f %>
                <%= render 'task/new_homeland_fields', :f=>f %>

                <div class="form-group">
                    <div class="col-md-offset-9 col-md-3">
                        <%= f.submit :"Next", :class => "btn btn-primary btn-block", :id => "submit_task", :onclick=>"click_submit_task()" %>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
    <script>
        function click_submit_task(){
            var a=document.getElementById("task_name").value;
            document.getElementById("task_node_name").value = a;
            document.getElementById("task_node_description").value = a;
        }
    </script>
</div>
