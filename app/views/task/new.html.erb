<div class="container">
    <div class = "row">
        <div class="col-md-offset-3 col-md-6">
            <h3><%=wt 'Creating a new task' %></h3>
            <hr/>

            <%= form_for :task, :html => {:class => "form-horizontal", :role => "form"}, url:task_index_path do |f|%>
                <div class="form-group">
                    <label class="col-md-12 ">Task category</label>
                    <div class="col-md-12">
                        <%= f.text_field :category, :class => "form-control", :placeholder => "" %>
                    </div>
                </div>


                <div class="form-group">
                    <label class="col-md-12 ">Task name</label>
                    <div class="col-md-12">
                        <%= f.text_field :name, :class => "form-control", :placeholder => "" %>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-9 col-md-3">
                        <%= f.submit :"Next", :class => "btn btn-primary btn-block" %>
                    </div>
                </div>

            <% end %>
        </div>
    </div>
</div>
