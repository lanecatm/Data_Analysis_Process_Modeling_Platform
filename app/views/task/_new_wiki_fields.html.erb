<div class="form-group">
    <label class="col-md-12 ">Task category</label>
    <div class="col-md-12">
        <%=f.select :task_category, TaskCategory.all.collect{|c|[ c.name, c.id ]}, 
            {},
            { class: "form-control" } 
        %>
    </div>
</div>


<div class="form-group">
    <label class="col-md-12 ">Task name</label>
    <div class="col-md-12">
        <%= f.text_field :name, :class => "form-control", :placeholder => "" %>
    </div>
</div>
<div class="form-group">
    <div class="col-md-12">
        <%= f.text_area :content, :class => "tinymce", :rows => 15, :cols => 120 %>
        <%= tinymce %>
    </div>
</div>

<%= f.hidden_field :comment, :value => 'First Revision'%>

