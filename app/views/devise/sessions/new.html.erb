<div class="container">
    <div class="row">
        <br/>
        <br/>
    </div>
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <div class="text-center box shadow-5 animated fadeInLeft b-r-4 p-a-20">
                <h1>Sign in</h1>
                <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'text-left'}) do |f| %>
                    <div class="form-group has-feedback">
                        <%= f.input :email, required: false, autofocus: true %>
                    </div>
                    <div class="form-group has-feedback">
                        <%= f.input :password, required: false %>
                    </div>
                    <div class="form-group has-feedback">
                        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                    </div>
                    <%= f.button :submit, "Log in", class: 'btn btn-primary btn-block m-b-15' %>
                    <a href="app-forgot.html">
                        <small>Forgot password?</small>
                    </a>
                    <p class="text-muted text-right">
                    Do not have an account?
                    <a href="app-register.html">Create an account</a>
                    </p>

                <% end %>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="loginModalLabel">Terms</h4>
            </div>
