<div >
    <%= link_to( wt( 'List pages' ), tasks_all_path, class:"btn btn-danger btn-sm", role:"button") %>
    <% if history_allowed? %>
        <%= link_to( wt( 'History' ), wiki_page_history_path(@page), class:"btn btn-danger btn-sm", role:"button" ) %>
    <% end %>
    <% if edit_allowed? %>
        <%= link_to( wt( 'Edit' ), wiki_page_edit_path(@page), class:"btn btn-danger btn-sm", role:"button" ) %>
    <% end %>
    <% if destroy_allowed? %>
        <%= link_to( wt( 'Destroy' ), wiki_page_path(@page), :method => :delete, :confirm => wt( "Destroyed page can't be restored. Are you sure?" ), class:"btn btn-danger btn-sm", role:"button" ) %>
    <% end %>
</div>
